IFS=:
while read file LANGUAGE LOCATION TYPE DISPLAY_NAME
do
	DESC="$TYPE ($file)"
	[ -n "$LOCATION" ] && DESC="$LOCATION $DESC"
	[ -n "$LANGUAGE" ] && DESC="$LANGUAGE $DESC"
	[ -n "$DISPLAY_NAME" ] && DESC="$DISPLAY_NAME ($file)"
	echo "  Choice \"$file/$DESC\" \"\""
